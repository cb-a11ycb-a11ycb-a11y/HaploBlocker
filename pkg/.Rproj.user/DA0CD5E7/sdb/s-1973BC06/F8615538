if(mode==3){\n      blockl <- block_calculation(data1, min_majorblock = 20000, edge_min = maf_filter, node_min = maf_filter,\n                                  subgroups = subgroups, min_per_subgroup = min_sub,\n                                  bp_map=bp_map)\n    } else if(mode==4){\n      blockl <- block_calculation(data1, adaptive_mode = TRUE, edge_min = maf_filter, node_min = maf_filter,\n                                  subgroups = subgroups, min_per_subgroup = min_sub,\n                                  bp_map=bp_map)\n    }\n\n    t <- coverage_test(blockl)\n    t2 <- coverage_test(blockl, max=Inf)\n    se <- blocklist_startend(blockl)\n    size <- blocklist_size(blockl)\n    report <- rbind(report, c(length(blockl), mean(t), mean(t2), mean(se[,2]-se[,1]+1), mean(size)))\n\n    chromo_block <- block_matrix_construction(blockl)\n\n    se_bp <- blocklist_startend(blockl, type=\"bp\")\n    bp_position <- rbind(bp_position, cbind(chromo, se_bp))\n\n    blockdata <- rbind(blockdata, chromo_block)\n    name1 <- paste0(\"Datasets_DHS1_GWAS/\", ref, \"/BlocksHaploBlocker1/DH_\",scenario, \"_Ref\", ref, \"mode\", mode, family, \"chromo\", chromo, \"maf\" ,maf,\"minsub\", min_sub,\".RData\")\n    save(file=name1, list=c(\"blockl\"))\n  }\n  colnames(report) <- c(\"Nr. of blocks\", \"Coverage\", \"Coverage+Overlap\", \"BlockLength\", \"BlockSize\")\n  name1 <- paste0(\"Datasets_DHS1_GWAS/\", ref, \"/BlocksHaploBlocker1/DH_\",scenario, \"_Ref\", ref, \"mode\", mode, family, \"maf\" ,maf,\"minsub\", min_sub,\"_blockmatrix.RData\")\n  colnames(blockdata) <- colnames(data1)\n  save(file=name1, list=c(\"blockdata\"))\n  name1 <- paste0(\"Datasets_DHS1_GWAS/\", ref, \"/BlocksHaploBlocker1/DH_\",scenario, \"_Ref\", ref, \"mode\", mode, family, \"maf\" ,maf,\"minsub\", min_sub,\"_report.txt\")\n  write.table(file=name1, report)\n  name1 <- paste0(\"Datasets_DHS1_GWAS/\", ref, \"/BlocksHaploBlocker1/DH_\",scenario, \"_Ref\", ref, \"mode\", mode, family, \"maf\" ,maf,\"minsub\", min_sub,\"_bp_position.txt\")\n  write.table(file=name1, bp_position)\n#}\n",
