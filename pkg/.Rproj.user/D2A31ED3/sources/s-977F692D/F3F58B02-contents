a <- read.table("/mnt/ceph_space/archiv/sequence_data_dec2013/genomic_selection/phenotype_data/drp_line55.txt")
b <- read.table("/mnt/ceph_space/tpook/Genetic_Datasets/fortpook/updated_shorter_pedigree.txt")
c <- read.table("/mnt/ceph_space/tpook/Genetic_Datasets/fortpook/fimpute_genotypes_rep1.txt")
d <- read.table("/mnt/ceph_space/tpook/realdata/chr27.bgl4.vcf")
e <- read.vcfR("/mnt/ceph_space/tpook/realdata/chr27.bgl4.vcf")

ids <- colnames(e@gt)[-1]
ids2 <- a[,19]
intersect(ids,ids2)
library(vcfR)
?vcfR

phenos <- matrix(NA, nrow=length(ids), ncol=ncol(a))
a <- as.matrix(a)
for(index in 1:length(ids)){
  print(index)
  replace = which(ids2==ids[index])
  if(length(replace)==1){
    phenos[index,] <- as.character(a[replace,])
  }
}
colnames(phenos) = a[1,]

save(file="/mnt/ceph_space/tpook/phenotypes_chicken.RData", list=c("phenos"))

